<?xml version="1.0" encoding="utf-8"?>
<!--Linear Layout 完成设计-->
<!--背景色设置为 #FFFFFF-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product"
    android:background="#E8EADC"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_25"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <!--字体(font family)未设-->
        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="@dimen/dp_35"
            android:text="@string/b_product"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:orientation="vertical">

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#E5CC96"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_50"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">

        <!--拍照区域-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_product_taking_photo"
            android:background="@drawable/camera_pic" />

    </LinearLayout>

    <!--边框用background(drawable)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:background="@drawable/text_view_shape"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_25"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_15">

        <!--字体(font family)未设-->
        <TextView
            android:id="@+id/product_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:height="@dimen/dp_25"
            android:text="@string/product_detail"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#D39394"/>

        </LinearLayout>

        <!--字(text)未设：动态-->
        <!--字体(font family)未设-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_5"
            android:id="@+id/p_details"
            android:height="@dimen/dp_170"
            android:text=" "
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <!--RelativeLayout 为了按钮排版-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--字体(font family)未设-->
            <Button
                android:id="@+id/b_product_back"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:background="@drawable/b_product"
                android:text="@string/b_back"
                android:textAlignment="center"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_16" />

            <!--字体(font family)未设-->
            <Button
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:id="@+id/b_product_setting"
                android:background="@drawable/b_product"
                android:text="@string/b_setting"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>