<?xml version="1.0" encoding="utf-8"?>
<!--Linear Layout 完成设计-->
<!--背景色设置为 #FFFFFF-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EADC"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_25"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10"
    tools:context=".Suggestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <!--字体(font family)未设-->
        <!--字颜色暂设 #000000-->
        <TextView
            android:id="@+id/suggestion_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="@dimen/dp_35"
            android:text="@string/b_suggestion"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_4">

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#E5CC96" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_problem"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/c_q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_view_shape_3"
                android:padding="@dimen/dp_10"
                android:text="@string/quention_one"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/c_q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_view_shape_3"
                android:padding="@dimen/dp_10"
                android:text="@string/quention_two"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:id="@+id/c_q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_view_shape_3"
                android:padding="@dimen/dp_10"
                android:text="@string/quention_three"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/c_q4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_view_shape_3"
                android:padding="@dimen/dp_10"
                android:text="@string/quention_four"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_15" />




            <TextView
                android:id="@+id/c_s"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/feedback"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_mail_contact"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_view_shape"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/mail_click"
                android:textColor="#71838F"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_80"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_80"
                android:paddingBottom="@dimen/dp_5">

                <Button
                    android:id="@+id/b_setting_back3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/b_product_3"
                    android:text="@string/b_back"
                    android:textAlignment="center"
                    android:textColor="#71838F"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>






</LinearLayout>